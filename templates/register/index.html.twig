{% extends 'base.html.twig' %}

{% block title %} Регистрация {% endblock %}
{% block js %}
{% endblock %}
{% block body %}

    <div class="container">
        <h3 class="text-center">Регистрация</h3>
        <div class="d-flex justify-content-center">
            <a class="btn btn-info" href="{{ path('connect_google_start') }}">Войти через Google</a><br>
            <a class="btn btn-info ms-2" href="{{ path('connect_github_start') }}">Войти через GitHub</a><br>
        </div>
        <div class="d-flex justify-content-center text-center">
            {{ form_start(form) }}
            {{ form_row(form.email, {
                'label': 'Введите Почту: '
            }) }}
            {{ form_row(form.plainPassword.first, {
                'label': 'Введите пароль:', 'class': 'form-control'
            }) }}
            {{ form_row(form.plainPassword.second, {
                'label': 'Введите пароль повторно:'
            }) }}
            <button type="submit" class="btn btn-success d-inline-block" formnovalidate>Зарегистрироваться</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}